{
  "name": "alh-luxury-perfumes",
  "version": "1.0.0",
  "description": "ALH Luxury Perfumes Website",
  "main": "index.html",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "chmod +x build.sh && ./build.sh",
    "serve": "npx http-server -p 3000 -c-1",
    "dev": "npm run build-css",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.16",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
