rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
// Staff wage/payment related folders are blocked from client access
    match /staff-payments/{allPaths=**} {
      allow read, write: if false;
    }
    match /staff-private/{allPaths=**} {
      allow read, write: if false;
    }
    match /{allPaths=**} {
      // Allow read access for all users
      allow read: if true;
      
      // Allow write access only for verified users
      allow write: if request.auth != null && request.auth.token.email_verified == true;
    }
  }
}
